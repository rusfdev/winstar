header.header
  .container.header__container 
    a(href="#").logo.header__logo
      img(src="./img/logos/logo.png", alt="logo")

    .header__slogan Endmills, Drills, Inserts Manufacturer

    .header-lang.header__lang
      ul.header-lang__list 
        li.header-lang__item 
          a(href="javascript:void(0);").header-lang__link.active ru
        li.header-lang__item 
          a(href="#").header-lang__link en

      
    
nav.header-nav 
  .header-nav__wrapper
    .container.header-nav__container
      a(href="#mobile-nav" data-action="Modal:open").mobile-nav-trigger
        svg.icon
          use(xlink:href='./img/icons/icons.svg#equals')

      .header-nav__content
        .header-lang.header-nav__lang
          ul.header-lang__list 
            li.header-lang__item 
              a(href="javascript:void(0);").header-lang__link.active ru
            li.header-lang__item 
              a(href="#").header-lang__link en

        ul.header-nav__list 
          li.header-nav__item 
            a(href=page=='main'?'javascript:void(0);':'./' class=page=='main'?'active':'').header-nav__link Главная
          
          li.header-nav__item(data-custom-interaction) 
            a(href="#").header-nav__link Продукты
              svg.icon
                use(xlink:href='./img/icons/icons.svg#caret-bottom')
            ul.header-nav__sub-list
              li.header-nav__sub-item 
                a(href="#").header-nav__sub-link End mill 
              li.header-nav__sub-item 
                a(href="#").header-nav__sub-link Milling inserts
              li.header-nav__sub-item 
                a(href="#").header-nav__sub-link Milling holder
              li.header-nav__sub-item 
                a(href="#").header-nav__sub-link Drills & Reamersa
              li.header-nav__sub-item 
                a(href="#").header-nav__sub-link Drills inserts & holder & Borin
              li.header-nav__sub-item 
                a(href="#").header-nav__sub-link Turning & holder & other
              li.header-nav__sub-item 
                a(href="#").header-nav__sub-link Accessories

          li.header-nav__item 
            a(href="#").header-nav__link Новости

          li.header-nav__item(data-custom-interaction) 
            a(href="#").header-nav__link Индивидуальное производство
              svg.icon
                use(xlink:href='./img/icons/icons.svg#caret-bottom')
            ul.header-nav__sub-list 
              li.header-nav__sub-item 
                a(href="#").header-nav__sub-link Customized Carbide End Mills Manufacturing
              li.header-nav__sub-item 
                a(href="#").header-nav__sub-link Customized Carbide Inserts Manufacturing
              li.header-nav__sub-item 
                a(href="#").header-nav__sub-link Customized Carbide Drills Manufacturing

          li.header-nav__item 
            a(href="#").header-nav__link Загрузки 
          li.header-nav__item 
            a(href="#").header-nav__link Видео
          li.header-nav__item 
            a(href="#").header-nav__link О нас
          li.header-nav__item 
            a(href="#").header-nav__link 
              span Контакты

          li.header-nav__item.header-nav__search-toggle
            button(type="button").header-search-toggle
              .header-search-toggle__icon
                svg.icon
                  use(xlink:href='./img/icons/icons.svg#magnifying-glass')
                svg.icon
                  use(xlink:href='./img/icons/icons.svg#close')
              span Поиск

  .header-search
    .container.header-search__container
      form(action="#").header-search__form
        button.header-search__submit 
          svg.icon
            use(xlink:href='./img/icons/icons.svg#magnifying-glass')
        input(type="text" placeholder="Поиск...").header-search__input 

